<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <com.gorgeous.coolx.widget.XSmallCard
                android:id="@+id/timePickerDialogHMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:smallCardGradient="@drawable/x_card_gradient_special_dialog_round"
                app:smallCardTitle="时间选择弹窗"
                app:smallCardSummary="时分秒"/>

            <com.gorgeous.coolx.widget.XSmallCard
                android:id="@+id/timePickerDialogHM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:smallCardGradient="@drawable/x_card_gradient_special_dialog_round"
                app:smallCardTitle="时间选择弹窗"
                app:smallCardSummary="时分"/>

            <com.gorgeous.coolx.widget.XSmallCard
                android:id="@+id/datePickerDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:smallCardGradient="@drawable/x_card_gradient_special_dialog_round"
                app:smallCardTitle="日期选择弹窗"
                app:smallCardSummary=""/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
