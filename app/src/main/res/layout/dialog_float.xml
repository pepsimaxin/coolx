<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <com.gorgeous.coolx.widget.XSmallCard
                android:id="@+id/floatDialogDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:smallCardGradient="@drawable/x_card_gradient_float_dialog_round"
                app:smallCardTitle="悬浮弹窗"
                app:smallCardSummary="完成"/>

            <com.gorgeous.coolx.widget.XSmallCard
                android:id="@+id/floatDialogAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:smallCardGradient="@drawable/x_card_gradient_float_dialog_round"
                app:smallCardTitle="悬浮弹窗"
                app:smallCardSummary="警告"/>

            <com.gorgeous.coolx.widget.XSmallCard
                android:id="@+id/floatDialogError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:smallCardGradient="@drawable/x_card_gradient_float_dialog_round"
                app:smallCardTitle="悬浮弹窗"
                app:smallCardSummary="错误"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
