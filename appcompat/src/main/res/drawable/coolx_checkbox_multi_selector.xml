<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中状态 -->
    <item
        android:id="@+id/multi_state_on"
        android:drawable="@drawable/coolx_checkbox_multi_checked"
        android:state_checked="true" />

    <!-- 未选状态 -->
    <item
        android:drawable="@drawable/coolx_checkbox_multi_disable"
        android:state_enabled="false" />

    <!-- 默认状态-->
    <item
        android:id="@+id/multi_state_off"
        android:drawable="@drawable/coolx_checkbox_multi_normal" />

    <transition
        android:fromId="@id/multi_state_off"
        android:toId="@id/multi_state_on">
        <animated-vector xmlns:aapt="http://schemas.android.com/aapt">
            <aapt:attr name="android:drawable">
                <vector
                    android:width="20dp"
                    android:height="20dp"
                    android:viewportWidth="40"
                    android:viewportHeight="40">

                    <!-- 背景 -->
                    <group
                        android:name="multi_check_group"
                        android:pivotX="20"
                        android:pivotY="20"
                        android:scaleX="1.0"
                        android:scaleY="1.0">

                        <path
                            android:name="multi_check"
                            android:fillColor="#FF085DFF"
                            android:fillType="evenOdd"
                            android:pathData="M12,0L28,0A12,12 0,0 1,40 12L40,28A12,12 0,0 1,28 40L12,40A12,12 0,0 1,0 28L0,12A12,12 0,0 1,12 0z">

                        </path>
                    </group>

                    <!-- 对号 -->
                    <group
                        android:name="multi_check_tag_group"
                        android:pivotX="20"
                        android:pivotY="20"
                        android:scaleX="0.0"
                        android:scaleY="0.0">
                        <path
                            android:name="multi_check_tag"
                            android:fillColor="#00000000"
                            android:pathData="M10.9091,20.885l6.4544,6.3877l13.703,-14.5455"
                            android:strokeWidth="4"
                            android:strokeColor="#FFFFFF"
                            android:strokeLineCap="round"
                            android:strokeLineJoin="round" />
                    </group>
                </vector>
            </aapt:attr>

            <!-- 背景的颜色渐变动画 -->
            <target android:name="multi_check">
                <aapt:attr name="android:animation">
                    <objectAnimator
                        android:duration="150"
                        android:interpolator="@anim/coolx_interpolator_checkbox_checked"
                        android:propertyName="fillColor"
                        android:valueFrom="#00000000"
                        android:valueTo="#FF085DFF"
                        android:valueType="colorType" />
                </aapt:attr>
            </target>

            <!-- 对号的缩放动画 -->
            <target android:name="multi_check_tag_group">
                <aapt:attr name="android:animation">
                    <set android:ordering="together">
                        <objectAnimator
                            android:duration="150"
                            android:interpolator="@anim/coolx_interpolator_checkbox_checked"
                            android:propertyName="scaleX"
                            android:valueFrom="0.0"
                            android:valueTo="1.0" />
                        <objectAnimator
                            android:duration="150"
                            android:interpolator="@anim/coolx_interpolator_checkbox_checked"
                            android:propertyName="scaleY"
                            android:valueFrom="0.0"
                            android:valueTo="1.0" />
                    </set>
                </aapt:attr>
            </target>

            <!-- 对号的path动画 -->
            <target android:name="multi_check_tag">
                <aapt:attr name="android:animation">
                    <objectAnimator
                        android:duration="100"
                        android:interpolator="@anim/coolx_interpolator_checkbox_checked"
                        android:propertyName="pathData"
                        android:startOffset="150"
                        android:valueFrom="M10.9091,20.885l6.4544,6.3877l15.703,-15.5455"
                        android:valueTo="M10.9091,20.885l6.4544,6.3877l13.703,-14.5455"
                        android:valueType="pathType" />
                </aapt:attr>
            </target>
        </animated-vector>
    </transition>
</animated-selector>